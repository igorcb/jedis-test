
<%= form_with(model: municipe) do |f| %>
  <div class="form d-flex gap-5 ">
    <div class="">
      <h3>Dados Pessoais</h3>
      <div class="mb-3">
        <label for="" class="form-label">Nome Completo</label>
        <%= f.text_field :name, class: "form-control", placeholder: "John Doe" %>
        <% @municipe.errors.full_messages_for(:name).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <label for="" class="form-label">CPF</label>
        <%= f.text_field :cpf, class: "form-control", placeholder: "000.000.000-00" %>
        <% @municipe.errors.full_messages_for(:cpf).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <label for="" class="form-label">CNS</label>
        <%= f.text_field :cns, class: "form-control" %>
        <% @municipe.errors.full_messages_for(:cns).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <label for="" class="form-label">E-mail</label>
        <%= f.text_field :email, class: "form-control", placeholder: "john@doe.com" %>
        <% @municipe.errors.full_messages_for(:email).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <label for="" class="form-label">Data Nascimento</label>
        <%= f.date_field :birth_date, value: @municipe.birth_date, class: "form-control" %>
        <% @municipe.errors.full_messages_for(:birth_date).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>

      <div class="mb-3">
        <label for="" class="form-label">Telefone</label>
        <%= f.text_field :phone, class: "form-control", placeholder: "99 99999-9999" %>
        <% @municipe.errors.full_messages_for(:phone).each do |message| %>
          <div class="text-danger"><%= message %></div>
        <% end %>
      </div>

      <div class="submit">
        <%= f.submit "Salvar", class: "btn btn-primary" %>
      </div>
    </div>

    <div class="">
      <h3>Endere√ßo</h3>


      <div class="">
        <%= f.fields_for :address do |address_form| %>
          <div class="mb-3">
            <label for="zip_code" class="form-label">CEP</label>
            <%= address_form.text_field :zip_code, class: "form-control", placeholder: "00000-000" %>
          </div>

          <div class="mb-3">
            <label for="zip_code" class="form-label">Logradouro</label>
            <%= address_form.text_field :street, class: "form-control", placeholder: "" %>
          </div>

          <div class="mb-3">
            <label for="zip_code" class="form-label">Numero</label>
            <%= address_form.text_field :number, class: "form-control", placeholder: "" %>
          </div>

          <div class="mb-3">
            <label for="zip_code" class="form-label">Complemento</label>
            <%= address_form.text_field :complement, class: "form-control", placeholder: "" %>
          </div>

          <div class="mb-3">
            <label for="zip_code" class="form-label">Bairro</label>
            <%= address_form.text_field :neighborhood, class: "form-control", placeholder: "" %>
          </div>

          <div class="mb-3">
            <label for="zip_code" class="form-label">Cidade</label>
            <%= address_form.text_field :city, class: "form-control", placeholder: "" %>
          </div>

          <div class="mb-3">
            <label for="zip_code" class="form-label">Estado</label>
            <%= address_form.text_field :state, class: "form-control", placeholder: "" %>
          </div>

          <div class="mb-3">
            <label for="zip_code" class="form-label">Codigo IBGE</label>
            <%= address_form.text_field :code_ibge, class: "form-control", placeholder: "" %>
          </div>
        <% end %>
      </div>

    </div>

  </div>
<% end  %>
</div>
